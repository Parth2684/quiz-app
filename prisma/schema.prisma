generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String         @id @default(uuid())
  name        String      
  email       String      @unique
  password    String?
  provider    String    
  attemptedQuiz QuizAttempt[]  
  verified    Boolean
  jwt         String? 
}

model Admin {
  adminId           String         @id
  name              String
  password          String
  createdQuiz    Quiz[]
}

model Quiz {
  id                String         @id @default(uuid())
  name              String
  createdById         String      
  questions         Question[]
  createdBy         Admin  @relation(fields: [createdById], references: [adminId])
  quizAttempt     QuizAttempt[]
}

model Question {
  id                String      @id @default(uuid())
  question          String      
  quizId            String
  quiz              Quiz  @relation(fields: [quizId], references: [id])
  options           Option[]
}

model Option {
  id                String      @id @default(uuid())
  option           String
  isCorrect         Boolean 
  questionId        String
  question          Question  @relation(fields: [questionId], references: [id])
}

model QuizAttempt {
  id              String      @id @default(uuid())
  userId          String      
  quizId          String
  score           Int
  questionIds    String[]
  optionIds       String[]
  attemptedAt     DateTime    @default(now())
  user            User  @relation(fields: [userId], references: [id])
  quiz            Quiz  @relation(fields: [quizId], references: [id])
  @@unique([userId, quizId])
}

